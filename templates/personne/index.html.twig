{% extends 'base.html.twig' %}

{% block title %}Personne index{% endblock %}


{% block body %}

    <!--Main layout-->
    <main class="pt-5 mx-lg-5">
        <div class="container-fluid mt-5">

            <!-- Heading -->
            <div class="card mb-4 wow fadeIn">

                <!--Card content-->
                <div class="card-body d-sm-flex justify-content-between">

                    <h4 class="mb-2 mb-sm-0 pt-1">
                        <a href="https://mdbootstrap.com/docs/jquery/" target="_blank">Home Page</a>
                        <span>/</span>
                        <span>Dashboard</span>
                    </h4>

                    <form class="d-flex justify-content-center">
                        <!-- Default input -->
                        <input type="search" placeholder="Type your query" aria-label="Search" class="form-control">
                        <button class="btn btn-primary btn-sm my-0 p" type="submit">
                            <i class="fas fa-search"></i>
                        </button>

                    </form>

                </div>

            </div>
            <!-- Heading -->



            <!--Grid row-->
            <div class="row wow fadeIn">

                <!--Grid column-->
                <div class="col-lg-12 col-md-12 mb-4">

                    <!--Card-->
                    <div class="card">

                        <!-- Card header -->
                        <div class="card-header">Personnes </div>

                        <!--Card content-->
                        <div class="card-body">


                            <table class="table">
                                <thead>
                                <tr>
                                    <th>IdPers</th>
                                    <th>NomPers</th>
                                    <th>PrenomPers</th>
                                    <th>DataNaissance</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for personne in personnes %}
                                    <tr>
                                        <td>{{ personne.idPers }}</td>
                                        <td>{{ personne.nomPers }}</td>
                                        <td>{{ personne.prenomPers }}</td>
                                        <td>{{ personne.dataNaissance ? personne.dataNaissance|date('Y-m-d') : '' }}</td>
                                        <td>
                                            <a href="{{ path('personne_show', {'idPers': personne.idPers}) }}"><i class="far fa-eye"></i></a>
                                            <a href="{{ path('personne_edit', {'idPers': personne.idPers}) }}"><i class="fas fa-edit"></i></a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('personne_new') }}">Create new</a>

                        </div>

                    </div>
                    <!--/.Card-->

                </div>
                <!--Grid column-->


            </div>
            <!--Grid row-->


        </div>
    </main>
    <!--Main layout-->


{% endblock %}
