{% extends 'base.html.twig' %}

{% block title %}Personne index{% endblock %}
{% block body %}

    <!--Main layout-->
    <main class="pt-5 mx-lg-5">
        <div class="container-fluid mt-5">


            {% include "Common/Heading.html.twig" %}


            <!--Grid row-->
            <div class="row wow fadeIn">

                <!--Grid column-->
                <div class="col-lg-12 col-md-12 mb-4">
                    <div class="row">
                        <div class="col-6">
                            <select class="form-control" id="choixMagasin">
                                {% for residence in residences %}
                                    <option id="{{ residence.idResi }}">{{ residence.nomResi }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-6">
                            <select class="form-control" id="choixappart">
                                {% for appartement in appartements %}
                                    <option id="{{ appartement.idAppart }}">{{ appartement.numeroAppart }} - {{ appartement.idResi }} </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-12 col-md-12 mb-4">
                <div class="row">
                    <div class="col text-center">
                        <button type="button" class="btn btn-outline-primary waves-effect text-center" id="togg1">Entrer dans la
                            résidence
                        </button>

                    </div>
                    <div class="col text-center">
                        <button type="button" class="btn btn-outline-primary waves-effect text-center" id="togg2">Entrer dans
                            l'appartement
                        </button>
                    </div>
                </div>
            </div>


            <div class="col-lg-12 col-md-12 mb-4">

                <div class="col">
                    <div class="card text-center">
                        <div class="card-header">
                            Caméra
                        </div>
                        <div class="card-body">
                            <video id="camera-feed"></video>
                        </div>
                        <div class="card-footer text-muted">
                            <a type="button" class="btn btn-success"
                               style="width: 500px; font-size: 20px ;display: none ;margin: auto; width: 100%"
                               id="succ"> Authentication success</a>
                            <a type="button" class="btn btn-danger"
                               style="width: 500px; font-size: 20px ;display: none ;margin: auto; width: 100%"
                               id="fail"> Authentication failed</a>
                        </div>
                    </div>
                </div>

            </div>
            <!--Grid column-->


        </div>
        <!--Grid row-->


        </div>
    </main>
    <!--Main layout-->
    <script language="javascript"
            src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script type="text/javascript">

    </script>
    {{ encore_entry_script_tags('demo') }}

{% endblock %}





